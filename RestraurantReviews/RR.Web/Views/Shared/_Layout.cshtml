<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Restaurant Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-dark text-light">

<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand">Restaurant Reviews</a>
    <div class="navbar-nav">
        <!--Action Links go here yo-->
        @Html.ActionLink("Restaurants", "AllRestaurants", "Restaurant", null, new {@class = "nav-item nav-link"})
    </div>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>


<div class="container">
    @RenderBody() 
    
    <footer>
        <hr class="bg-light" />
        <p>&copy; @DateTime.Now.Year - Restaurant Reviews</p>
    </footer>
</div>



@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
