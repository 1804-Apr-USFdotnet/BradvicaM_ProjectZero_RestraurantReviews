<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Restaurant Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-dark text-light">

<div class="container">
    
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        @Html.ActionLink("Restaurant Reviews", "Index", "Home", null, new { @class = "navbar-brand"})
        <div class="navbar-nav">
            @Html.ActionLink("Restaurants", "AllRestaurants", "Restaurant", null, new { @class = "nav-item nav-link" })
            @Html.ActionLink("About Us", "About", "Home", null, new { @class = "nav-item nav-link" })
            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-item nav-link" })
        </div>
        <form class="form-inline ml-auto">
            <input class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>

    @RenderBody()

    <footer>
        <hr class="bg-light"/>
        <p>&copy; @DateTime.Now.Year - Restaurant Reviews</p>
    </footer>
</div>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
