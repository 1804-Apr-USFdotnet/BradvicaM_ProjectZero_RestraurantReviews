@model IEnumerable<RR.ViewModels.RestaurantViewModel>

@{
    ViewBag.Title = "AllRestaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Restaurants</h2>

<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th>Name</th>
        <th>Average Rating</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
        <th>Phone Number</th>
        <th>Website</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Name</td>
                <td>@i.AverageRating</td>
                <td>@i.Street</td>
                <td>@i.City</td>
                <td>@i.State</td>
                <td>@i.ZipCode</td>
                <td>@i.PhoneNumber</td>
                <td>@i.Website</td>
            </tr>
        }
    </tbody>
</table>

